<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.12">
  <POU Name="FB_UDP_Server_RESET" Id="{40459399-1e32-4709-a9b8-e091a3e71edf}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK FB_UDP_Server_RESET
VAR_INPUT
END_VAR
VAR_OUTPUT
	READY : BOOL;
END_VAR
VAR
	fbSocketCloseAll : FB_SocketCloseAll;
	step : BYTE;
END_VAR]]></Declaration>
    <Implementation>
      <ST><![CDATA[(* On PLC reset or program download close all old connections *)

CASE UDP_SERVER_RESET OF

2:	READY := TRUE;
	RETURN;

1:	IF step = 0 THEN
		RETURN;
	END_IF;

0:	UDP_SERVER_RESET := 1; (* Reset ist aktiv *)
	step := 1;

END_CASE;

CASE step OF

0:	RETURN;

1:	fbSocketCloseAll(sSrvNetId:= '', bExecute:= TRUE, tTimeout:= T#10s );
	step := 2;

2:	fbSocketCloseAll(bExecute:= FALSE);
	IF fbSocketCloseAll.bBusy = FALSE THEN
		step := 0;
		UDP_SERVER_RESET := 2; (* Reset durchgeführt , Bereit zur Verwendung *)
	END_IF;

END_CASE;]]></ST>
    </Implementation>
    <LineIds Name="FB_UDP_Server_RESET">
      <LineId Id="49" Count="28" />
      <LineId Id="39" Count="0" />
    </LineIds>
  </POU>
</TcPlcObject>